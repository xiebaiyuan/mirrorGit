# GitHub 同步到 Gitea 配置示例
# 复制此文件为 .env 并填入您的实际配置

# GitHub 配置
export GITHUB_USER="your-github-username"
export GITHUB_TOKEN="ghp_your_github_token_here"

# Gitea 配置
export GITEA_URL="https://git.example.com:3000"
export GITEA_USER="your-gitea-username"
export GITEA_TOKEN="your_gitea_token_here"

# 基础配置
export WORK_DIR="/tmp/github-mirror"
export SKIP_REPOS="archive,backup,test-repo,private-notes"

# 缓存配置
export ENABLE_CACHE="true"
export CACHE_DIR="/tmp/github-mirror/repos"
export CACHE_EXPIRY="86400"  # 24小时

# 邮件通知配置（可选）
export ENABLE_MAIL="false"
export SMTP_SERVER="smtp.gmail.com"
export SMTP_PORT="587"
export SMTP_USER="your-email@gmail.com"
export SMTP_PASS="your-app-password"
export MAIL_TO="admin@example.com"
export MAIL_FROM="noreply@example.com"

# 飞书通知配置（可选）
export ENABLE_FEISHU="false"
export FEISHU_WEBHOOK_URL="https://open.feishu.cn/open-apis/bot/v2/hook/xxxxxxxxxx"